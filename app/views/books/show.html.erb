<h1>Book detail</h1>

<%= link_to book_path(@book) do %>
<%= @book.title %>
<% end %>
<%= @book.body %>

<%= link_to "Edit",edit_book_path(@book) %>
<%= link_to "Destroy",book_path(@book),method: :delete %>

<h1>New book</h1>
<%= form_with model: @book_new do |f|%>
<p>Title</p>
<%= f.text_field :title %>

<p>Opinion</p>
<%= f.text_area :body %>
<%= f.submit "投稿" %>

<% end %>
