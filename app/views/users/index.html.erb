<div>
  <div>
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %><br>
  <table>
    <tr>
  <td>name</td>
  <td><%= @user.name %></td>
  </tr>
  <tr>
    <td>introduction</td>
    <td><%= @user.introduction %></td>
  </tr>
  </table>
  <%= link_to "編集アイコン",edit_user_path(@user) %>
</div>
</div>


<div>
  <h1>New book</h1>
<%= form_with model: @book do |f|%>
<p>Title</p>
<%= f.text_field :title %>

<p>Opinion</p>
<%= f.text_area :body %><br>
<%= f.submit "投稿" %>

<% end %>
</div>




<div>
  <h1>Users</h1>
  
  <% @users.each do |user| %>
  <table>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
      <td><%= user.name %></td>
      <td><%= link_to "show",user_path(user.id) %></td>
    </tr>
  </table>
  <% end %>
</div>